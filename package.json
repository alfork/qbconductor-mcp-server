{
  "name": "qbconductor-mcp-server",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server that provides Claude with direct access to QuickBooks Desktop operations through the Conductor API",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:config": "node -e \"require('dotenv').config(); console.log('Configuration loaded successfully')\"",
    "test:connection": "npm run build && node dist/index.js --test-connection",
    "test:conductor": "node -e \"console.log('Testing Conductor API connectivity...')\"",
    "test:mcp": "node -e \"console.log('Testing MCP server startup...')\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "quickbooks",
    "quickbooks-desktop",
    "conductor",
    "conductor-api",
    "financial",
    "accounting",
    "claude",
    "ai",
    "integration",
    "typescript"
  ],
  "author": {
    "name": "Alex Forkosh",
    "email": "alex.forkosh@icr247.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alfork/qbconductor-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/alfork/qbconductor-mcp-server/issues"
  },
  "homepage": "https://github.com/alfork/qbconductor-mcp-server#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "prettier": "^3.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
